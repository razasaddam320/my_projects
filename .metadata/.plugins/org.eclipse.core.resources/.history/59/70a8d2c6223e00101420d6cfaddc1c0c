package pom;


import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

public class Login_OrangeHRM {
	
	WebDriver driver;  

	//Declaration
	@FindBy (name = "username")
	private WebElement usernameTF;
	
	@FindBy (name = "password")
	private WebElement passwordTF;
	
	@FindBy (xpath = "//button[text()=' Login ']")
	private WebElement loginbutton;
	
	@FindBy (xpath = "//div[@class='orangehrm-login-forgot']")
	private WebElement forgotpassword;
	
	//Initilization
	
	Login_OrangeHRM (WebDriver  driver) {
		this.driver= driver ; 
		
		PageFactory.initElements(driver, this);
		
	}
	
	

	//utilisation
	 
	public void  setusernameTF (String username ) {
		usernameTF.sendKeys(username);
		
	}
	
	public void setpasswordTF (String pw) {
		 passwordTF.sendKeys(pw);
	}
	
	public void clikloginbutton() {
		 loginbutton.click();
	}
	
	public void  setForgotpassword (String forgotpw) {
		forgotpassword.sendKeys(forgotpw);
	}
	
	
}
